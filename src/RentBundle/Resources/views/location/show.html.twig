{% extends 'base.html.twig' %}

{% block body %}
    <h1>Location</h1>

    <table>
        <tbody>
            <tr>
                <th>Idl</th>
                <td>{{ location.idL }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ location.titre }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ location.lieu }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ location.prix }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ location.photo }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ location.rating }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('location_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('location_edit', { 'idL': location.idL }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

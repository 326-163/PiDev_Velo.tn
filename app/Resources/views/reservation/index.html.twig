{% extends 'base.html.twig' %}

{% block body %}

 {% block title %}  <div class="text-center" ><h1> Liste des reservations: locataire/admin </h1> <br/> {% endblock %}
<br>

    <table class="table_striped">
        <thead>
            <tr>         
                <th>Date debut</th> <br>
                <th>Date fin</th>          
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{% if reservation.dateDeb %}{{ reservation.dateDeb|date('Y-m-d') }}{% endif %}</td>
                <td>{% if reservation.dateFin %}{{ reservation.dateFin|date('Y-m-d') }}{% endif %}</td>           
                <td>                                   
                    <a href="{{ path('reservation_notif', { 'id': reservation.id }) }}" class="btn btn-success btn-sm"> Accepter </a>
                    <a href="{{ path('location_delete', { 'id': reservation.id }) }}" class="btn btn-danger btn-sm"> Refuser </a>                    
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
